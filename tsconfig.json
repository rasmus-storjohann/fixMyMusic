{
        "compileOnSave": false,
	"compilerOptions": {
		"declaration": true,
		"module": "CommonJS",
		"target": "es6",
		"noImplicitAny": false,
		"outDir": "dist",
                
                "alwaysStrict" : true,
                "noFallthroughCasesInSwitch": true,
                "noImplicitAny": false,
                "noImplicitReturns": true,
                "noImplicitThis": true,
                "noUnusedLocals": false,
                "noUnusedParameters": false,
                "strictNullChecks" : true
	}
}
